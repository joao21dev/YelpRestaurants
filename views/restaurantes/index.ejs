<% layout('layouts/boilerplate')%>

<div id="map" style="width: 100%; height: 300px; opacity: 0.95;"></div>
<div>


<% for (let restaurante of restaurantes){%>
<div class="card mb-4 mt-4" style="border-radius: 50; opacity: 0.95;">
    <div class="row">
        <div class="col-md-4">
           <% if(restaurante.images.length) {%>
            <img class="img-fluid" style="height: 276px; width: 413px;" alt="" src="<%=restaurante.images[0].url%>">
            <% }else { %>
             <img class="img-fluid" style="height: 276px; width: 413px;" alt="" src="">
                <% } %>  
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= restaurante.title %> </h5>
                <p class="card-text"><%= restaurante.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= restaurante.location%></small>
                </p>
                <a class="btn btn-danger" href="/restaurantes/<%=restaurante._id%>">Sobre <%=restaurante.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>
</div>

<script type="">
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const restaurantes = {features: <%- JSON.stringify(restaurantes) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>

